{
	"name": "__MSG_addon_name__",
	"description": "__MSG_addon_desc__",
	"version": "1.3b",
	"default_locale": "en-US",
	"homepage_url": "https://github.com/Noitidart/Fake-Location/",
	"icons": {
		"16": "images/icon.svg",
		"48": "images/icon.svg",
		"64": "images/icon.svg",
		"96": "images/icon.svg",
		"128": "images/icon.svg"
	},

	"manifest_version": 2,
	"applications": {
		"gecko": {
			"id": "{{EXTID}}",
			"strict_min_version": "51.0"
		}
	},

	"incognito": "spanning",
	"permissions": [
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],

	"background": { "page": "pages/background.html" },

	"browser_action": {
		"default_icon": "images/icon.svg",
		"browser_style": true,
		"default_title": "__MSG_browseraction_title__"
	}
}
