{
	"name": "__MSG_addon_name__",
	"description": "__MSG_addon_desc__",
	"version": "1.2b",
	"default_locale": "en-US",
	"homepage_url": "https://github.com/Noitidart/Fake-Location/",
	"icons": {
		"16": "images/icon.svg",
		"48": "images/icon.svg",
		"64": "images/icon.svg",
		"96": "images/icon.svg",
		"128": "images/icon.svg"
	},

	"manifest_version": 2,
	"applications": {
		"gecko": {
			"id": "@fake-location",
			"strict_min_version": "51.0"
		}
	},

	"incognito": "spanning",
	"permissions": [
		"storage",
		"http://dev.virtualearth.net/"
	],

	"background": {
		"scripts": ["scripts/3rd/polyfill.min.js", "scripts/3rd/comm/webext.js", "scripts/3rd/ba-issemver.min.js", "scripts/background.js"]
	},

	"browser_action": {
		"default_icon": "images/icon.svg",
		"browser_style": true,
		"default_title": "__MSG_browseraction_title__"
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
